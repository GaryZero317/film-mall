page {
  background: #f8f8f8;
}

.form-group {
  background: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 100rpx;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
}

input {
  flex: 1;
  height: 100rpx;
  font-size: 28rpx;
}

textarea {
  flex: 1;
  height: 160rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.region-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.region-text.placeholder {
  color: #999;
}

.arrow {
  margin-left: 10rpx;
  color: #999;
}

.submit-btn {
  padding: 40rpx 30rpx;
}

.submit-btn button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
}

/* 地区选择器 */
.region-picker {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: relative;
  background: #fff;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
  background: #f8f8f8;
}

.picker-header .title {
  font-size: 32rpx;
  color: #333;
}

.picker-header .cancel,
.picker-header .confirm {
  font-size: 28rpx;
  color: #666;
}

.picker-header .confirm {
  color: #ff4444;
}

picker-view {
  width: 100%;
  height: 480rpx;
}

picker-view-column view {
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
} 