.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 地址列表 */
.address-list {
  padding: 20rpx;
}

.address-item {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 地址信息 */
.address-info {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.user-info {
  margin-bottom: 16rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-right: 20rpx;
}

.mobile {
  font-size: 28rpx;
  color: #666;
}

.default-tag {
  display: inline-block;
  font-size: 22rpx;
  color: #1296db;
  border: 1rpx solid #1296db;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  margin-left: 20rpx;
}

.address {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

/* 操作按钮 */
.actions {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
}

.action-btn {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.action-btn:last-child {
  margin-right: 0;
}

.action-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.action-btn text {
  font-size: 26rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 新增地址按钮 */
.add-btn {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #1296db;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
} 