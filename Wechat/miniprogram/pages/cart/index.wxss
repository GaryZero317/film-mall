.container {
  padding-bottom: 100rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 购物车列表 */
.cart-list {
  background: #fff;
  padding: 0 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.cart-item:last-child {
  border-bottom: none;
}

/* 选择框 */
.checkbox {
  padding: 20rpx;
}

/* 商品图片 */
.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

/* 商品信息 */
.product-info {
  flex: 1;
  overflow: hidden;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: bold;
}

.product-stock {
  font-size: 24rpx;
  color: #999;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
}

.minus, .plus {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #f5f5f5;
  color: #333;
  font-size: 32rpx;
}

.minus.disabled, .plus.disabled {
  color: #999;
  background: #f0f0f0;
}

.quantity {
  width: 70rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #fff;
  margin: 0 10rpx;
  border: 1rpx solid #eee;
}

/* 删除按钮 */
.delete-btn {
  padding: 20rpx;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999;
}

.empty-cart image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-cart text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.empty-cart .go-shopping {
  padding: 20rpx 60rpx;
  background: #1296db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.select-all {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.select-all text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.total-info {
  flex: 1;
  text-align: right;
  padding-right: 20rpx;
}

.total-price {
  font-size: 36rpx;
  color: #e4393c;
  font-weight: bold;
}

.checkout-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #1296db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.checkout-btn.disabled {
  background: #ccc;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
} 