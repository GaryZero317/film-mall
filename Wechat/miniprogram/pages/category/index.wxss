.container {
  display: flex;
  height: 100vh;
  background: #f5f5f5;
}

/* 左侧分类菜单 */
.category-menu {
  width: 180rpx;
  height: 100%;
  background: #fff;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item.active {
  background: #f5f5f5;
  color: #1296db;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 8rpx;
  padding: 10rpx;
  border-radius: 50%;
  background: #f8f8f8;
}

.menu-item.active .category-icon {
  background: #e6f4fb;
}

.menu-item text {
  font-size: 24rpx;
  line-height: 1.2;
  text-align: center;
}

/* 右侧商品列表 */
.product-list {
  flex: 1;
  height: 100%;
  padding: 0 20rpx;
}

.category-title {
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.products {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-item {
  width: 48%;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 320rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: bold;
  margin-top: 10rpx;
}

/* 加载状态 */
.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
} 