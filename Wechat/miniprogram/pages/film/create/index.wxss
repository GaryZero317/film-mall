/* pages/film/create/index.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  padding-bottom: 120rpx;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  position: relative;
}

.back-icon {
  position: absolute;
  left: 30rpx;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

/* 地址部分 */
.address-section {
  display: flex;
  align-items: center;
}

.address-info {
  flex: 1;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.mobile {
  font-size: 26rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

.no-address {
  flex: 1;
  font-size: 28rpx;
  color: #999;
}

.right-arrow {
  margin-left: 20rpx;
  color: #999;
}

/* 胶片部分 */
.film-item {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.film-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4444;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  font-size: 26rpx;
  color: #333;
}

.required {
  color: #ff4444;
  margin-left: 4rpx;
}

.picker {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  min-width: 200rpx;
}

.placeholder {
  color: #999;
}

.input {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  max-width: 200rpx;
}

.price {
  font-size: 28rpx;
  color: #ff4444;
  font-weight: bold;
}

.add-film-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin-top: 20rpx;
  color: #157efb;
  font-size: 28rpx;
}

.add-film-btn text {
  margin-right: 10rpx;
}

/* 选项部分 */
.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.option-label {
  font-size: 26rpx;
  color: #333;
}

.option-right {
  display: flex;
  align-items: center;
}

.option-hint {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

.remark {
  align-items: flex-start;
}

.remark-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  text-align: right;
}

/* 价格信息部分 */
.price-section {
  margin-bottom: 120rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #333;
}

.price-item.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.total-price {
  font-size: 32rpx;
  color: #ff4444;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.total-price .price {
  font-size: 32rpx;
  margin-left: 10rpx;
}

.submit-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #157efb;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 0;
}

.submit-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #157efb;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 