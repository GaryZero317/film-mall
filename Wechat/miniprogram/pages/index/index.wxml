<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input 
      type="text" 
      placeholder="搜索商品" 
      value="{{searchValue}}"
      bindinput="onSearchInput"
      bindconfirm="onSearch"
    />
    <button bindtap="onSearch">搜索</button>
  </view>

  <!-- 轮播图 -->
  <swiper class="banner" indicator-dots autoplay circular>
    <swiper-item wx:for="{{banners}}" wx:key="id">
      <image src="{{item.image_url}}" mode="aspectFill" bindtap="onBannerTap" data-id="{{item.product_id}}"></image>
    </swiper-item>
  </swiper>

  <!-- 分类导航 -->
  <view class="category-section">
    <!-- "全部"分类 -->
    <view 
      class="category-item {{selectedCategory === 0 ? 'active' : ''}}"
      data-id="0"
      bindtap="switchCategory"
    >
      全部
    </view>
    
    <!-- 两行分类 -->
    <view class="category-rows">
      <view class="category-row" wx:for="{{categoryRows}}" wx:key="index" wx:for-item="row">
        <view 
          class="category-item {{selectedCategory === item.id ? 'active' : ''}}"
          wx:for="{{row}}"
          wx:key="id"
          data-id="{{item.id}}"
          bindtap="switchCategory"
        >
          {{item.name}}
        </view>
      </view>
    </view>
  </view>

  <!-- 商品列表 -->
  <view class="product-list">
    <view class="product-item" wx:for="{{products}}" wx:key="id" bindtap="goToDetail" data-id="{{item.id}}">
      <image 
        class="product-image" 
        src="{{item.mainImage}}" 
        mode="aspectFill"
        lazy-load
        show-menu-by-longpress
      />
      <view class="product-info">
        <text class="product-name">{{item.name}}</text>
        <text class="product-price">¥{{item.amount/100}}</text>
        <text class="product-stock">库存: {{item.stock}}</text>
      </view>
    </view>
  </view>

  <!-- 加载中状态 -->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading">
      <text>加载中...</text>
    </view>
  </view>

  <!-- 空状态 -->
  <view class="empty-container" wx:if="{{!loading && products.length === 0}}">
    <text>暂无商品</text>
  </view>

  <!-- 加载更多 -->
  <view class="load-more" wx:if="{{hasMore && !loading}}">
    <text>上拉加载更多</text>
  </view>
</view> 