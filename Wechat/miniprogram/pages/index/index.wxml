<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input 
      type="text" 
      placeholder="搜索商品" 
      value="{{searchValue}}"
      bindinput="onSearchInput"
      bindconfirm="onSearch"
    />
    <button bindtap="onSearch">搜索</button>
  </view>

  <!-- 轮播图 -->
  <swiper class="banner" indicator-dots autoplay circular>
    <swiper-item wx:for="{{banners}}" wx:key="id">
      <image src="{{item.image_url}}" mode="aspectFill" bindtap="onBannerTap" data-id="{{item.product_id}}"></image>
    </swiper-item>
  </swiper>

  <!-- 分类导航 -->
  <view class="category-section">
    <!-- "全部"分类 -->
    <view 
      class="category-item {{selectedCategory === 0 ? 'active' : ''}}"
      data-id="0"
      bindtap="switchCategory"
    >
      全部
    </view>
    
    <!-- 两行分类 -->
    <view class="category-rows">
      <view class="category-row" wx:for="{{categoryRows}}" wx:key="index" wx:for-item="row">
        <view 
          class="category-item {{selectedCategory === item.id ? 'active' : ''}}"
          wx:for="{{row}}"
          wx:key="id"
          data-id="{{item.id}}"
          bindtap="switchCategory"
        >
          {{item.name}}
        </view>
      </view>
    </view>
  </view>

  <!-- 商品列表 -->
  <view class="product-list">
    <view 
      class="product-item"
      wx:for="{{products}}"
      wx:key="id"
      bindtap="goToDetail"
      data-id="{{item.id}}"
    >
      <image 
        src="{{getApp().globalData.baseUrl + item.mainImage}}" 
        mode="aspectFill"
        class="product-image"
      />
      <view class="product-info">
        <text class="name">{{item.name}}</text>
        <view class="price-row">
          <text class="price">¥{{item.amount/100}}</text>
          <text class="stock {{item.stock > 0 ? '' : 'sold-out'}}">
            {{item.stock > 0 ? '库存: ' + item.stock : '已售罄'}}
          </text>
        </view>
      </view>
    </view>
  </view>

  <!-- 加载更多 -->
  <view class="loading" wx:if="{{loading}}">加载中...</view>
  <view class="no-more" wx:if="{{!hasMore && products.length > 0}}">没有更多了</view>
  <view class="empty" wx:if="{{!loading && products.length === 0}}">暂无商品</view>
</view> 