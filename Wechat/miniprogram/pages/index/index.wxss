.container {
  padding: 20rpx;
  background: #f5f5f5;
}

/* 搜索栏 */
.search-container {
  padding: 20rpx 30rpx;
  background: #fff;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
}

.search-bar icon {
  margin-right: 10rpx;
  color: #999;
}

.search-placeholder {
  flex: 1;
  font-size: 28rpx;
  color: #999;
}

.search-bar input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-bar button {
  margin-left: 20rpx;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  background: #1296db;
  color: #fff;
  border-radius: 36rpx;
}

/* 轮播图样式 */
.banner {
  height: 300rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 分类导航样式 */
.category-section {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.category-row {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.category-item {
  flex: 1;
  min-width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f5f5f5;
  margin: 10rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.category-item.active {
  background: #1296db;
  color: #fff;
}

/* 商品列表样式 */
.product-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.product-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 100%;
  height: 360rpx;
  background: #f8f8f8;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ff4444;
  font-weight: bold;
  display: block;
  margin-bottom: 6rpx;
}

.product-stock {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  padding: 30rpx;
  text-align: center;
}

.loading {
  display: inline-block;
  padding: 10rpx 20rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.loading text {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-container {
  padding: 100rpx 0;
  text-align: center;
}

.empty-container text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx;
}

.load-more text {
  font-size: 24rpx;
  color: #999;
}

.product-info .stock {
  font-size: 24rpx;
  color: #666;
}

.product-info .stock.sold-out {
  color: #ff4444;
} 