/* 容器样式 */
.order-list-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8f8f8;
}

/* 标签栏样式 */
.tabs {
  display: flex;
  background: #fff;
  padding: 0;
  position: sticky;
  top: 0;
  z-index: 1;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.tab-item.active {
  color: #1296db;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
}

/* 订单列表样式 */
.order-list {
  flex: 1;
  height: 0;
}

.orders {
  padding: 20rpx;
}

.order-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-number {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  color: #1296db;

}

/* 商品信息 */
.product-info {
  padding: 20rpx 0;
}

.product-item {
  display: flex;
  padding: 16rpx 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-price {
  font-size: 30rpx;
  color: #ff4444;
  margin-bottom: 8rpx;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

/* 订单金额 */
.order-amount {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.amount {
  color: #ff4444;
  font-size: 32rpx;
  margin-left: 8rpx;
}

/* 订单操作 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-btn {
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  border-radius: 25rpx;
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.action-btn.primary {
  background: #1296db;
  color: #fff;
  border: none;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
} 