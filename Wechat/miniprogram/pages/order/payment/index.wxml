<view class="payment-page">
  <block wx:if="{{loading}}">
    <view class="loading">加载中...</view>
  </block>
  <block wx:elif="{{!order}}">
    <view class="error">订单不存在</view>
  </block>
  <block wx:else>
    <!-- 订单信息 -->
    <view class="order-info">
      <view class="order-header">
        <text class="order-title">订单详情</text>
        <text class="order-no">订单号：{{order.order_no}}</text>
      </view>
      
      <!-- 商品信息 -->
      <view class="product-info" wx:for="{{order.items}}" wx:key="id">
        <image class="product-image" src="{{item.cover_image}}" mode="aspectFill"></image>
        <view class="product-detail">
          <text class="product-name">{{item.name}}</text>
          <view class="product-price-info">
            <text class="product-price">¥{{item.price}}</text>
            <text class="product-quantity">x{{item.quantity}}</text>
          </view>
        </view>
      </view>

      <!-- 订单金额 -->
      <view class="order-amount">
        <text>订单金额</text>
        <text class="amount">¥{{order.total_price}}</text>
      </view>
    </view>

    <!-- 底部支付按钮 -->
    <view class="bottom-bar">
      <view class="total-section">
        <text>实付金额：</text>
        <text class="total-price">¥{{order.total_price}}</text>
      </view>
      <view class="button-group">
        <button class="btn-cancel" bindtap="onCancel">取消</button>
        <button class="btn-pay" bindtap="onPayment" loading="{{loading}}">立即支付</button>
      </view>
    </view>
  </block>
</view> 