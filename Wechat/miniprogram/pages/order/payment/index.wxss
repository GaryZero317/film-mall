/* 页面容器 */
.payment-page {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

/* 错误提示 */
.error {
  text-align: center;
  padding: 30rpx;
  color: #ff0000;
}

/* 订单信息 */
.order-info {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.order-status {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

.pay-status {
  font-size: 24rpx;
  color: #666;
}

.order-subheader {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

/* 商品信息 */
.product-info {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f9f9f9;
  border: 1px solid #eee;
}

.product-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-remark {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单金额明细 */
.order-amount-details {
  padding-top: 20rpx;
}

.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  padding: 10rpx 0;
  color: #666;
}

.amount-item.total {
  margin-top: 10rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #eee;
  font-weight: bold;
  color: #333;
}

.amount {
  font-size: 36rpx;
  color: #ff0000;
  font-weight: bold;
}

/* 订单备注 */
.order-remark {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.remark-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.remark-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-amount {
  padding: 0 30rpx 20rpx;
  text-align: right;
}

.total-amount .amount {
  color: #ff4d4f;
  font-size: 36rpx;
  font-weight: bold;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  min-width: 240rpx;
}

.action-btn.primary {
  background: #07c160;
  color: #fff;
}

.action-btn.cancel {
  background: #f7f7f7;
  color: #333;
}

.simulate-pay {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  line-height: 1.2;
  padding: 0;
}

.simulate-pay .pay-text {
  display: block;
  text-align: center;
}

.simulate-pay .sub-text {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 固定在顶部的倒计时 */
.countdown-container.fixed-top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: #fff;
  padding: 20rpx 0;
  margin: 0;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.countdown-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFF7F7;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  width: 90%;
  border: 2px solid #FF5252;
  box-shadow: 0 4rpx 12rpx rgba(255, 82, 82, 0.2);
}

.countdown-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: bold;
}

.countdown-timer {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF5252;
  margin: 10rpx 0;
  font-family: monospace;
  letter-spacing: 4rpx;
}

.countdown-tip {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.product-debug {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
  background-color: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}