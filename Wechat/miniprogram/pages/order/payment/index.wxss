/* 页面容器 */
.payment-page {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

/* 错误提示 */
.error {
  text-align: center;
  padding: 30rpx;
  color: #ff0000;
}

/* 订单信息 */
.order-info {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

/* 商品信息 */
.product-info {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  color: #ff0000;
  font-weight: bold;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单金额 */
.order-amount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 30rpx;
  font-size: 28rpx;
}

.amount {
  font-size: 36rpx;
  color: #ff0000;
  font-weight: bold;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.total-amount {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.action-btn {
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  text-align: center;
}

.action-btn.primary {
  background: #07c160;
  color: #fff;
} 