.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 100rpx;
}

.product-detail {
  background: #fff;
}

/* 轮播图样式 */
.product-swiper {
  width: 100%;
  height: 750rpx;
  background: #f5f5f5;
  position: relative;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 30rpx;
}

.name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.price {
  font-size: 36rpx;
  color: #ff4444;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.stock {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.quantity-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.quantity-section text {
  font-size: 28rpx;
  color: #333;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-control button {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  margin: 0;
  line-height: 58rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  background: #fff;
  color: #333;
  font-size: 28rpx;
}

.quantity-control .number {
  width: 80rpx;
  text-align: center;
  margin: 0 20rpx;
}

.description {
  margin-top: 30rpx;
}

.description .title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.description .content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bottom-bar button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
}

.add-cart {
  background: #fff;
  color: #1296db;
  border: 1rpx solid #1296db;
}

.buy-now {
  background: #1296db;
  color: #fff;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 商品图片 */
.product-images {
  width: 100%;
  height: 750rpx;
}

.product-images image {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.product-info {
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.product-price {
  font-size: 40rpx;
  color: #e4393c;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

/* 商品规格 */
.product-specs {
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
}

.spec-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.spec-item:last-child {
  margin-bottom: 0;
}

.spec-label {
  color: #666;
  font-size: 26rpx;
}

.spec-value {
  color: #333;
  font-size: 26rpx;
  font-weight: 500;
}

/* 储存建议 */
.storage-tips {
  margin-top: 30rpx;
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 商品详情图片 */
.detail-images {
  margin-top: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-top: 20rpx solid #f5f5f5;
}

.detail-images .title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.detail-image {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  display: block;
}

.detail-image:last-child {
  margin-bottom: 0;
} 