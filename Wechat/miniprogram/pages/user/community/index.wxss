/* pages/user/community/index.wxss */
.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  position: relative;
  background-color: #fff;
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tabs {
  width: 80%;
}

.create-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.create-btn image {
  width: 40rpx;
  height: 40rpx;
}

.works-list {
  padding: 20rpx;
}

.works-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.work-item {
  width: 48%;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.work-cover {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.work-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.work-info {
  padding: 16rpx;
}

.work-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.work-author {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.author-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.work-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.work-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.stat-item image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.loading-more {
  text-align: center;
  padding: 20rpx 0;
}

.no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty text {
  color: #999;
  font-size: 28rpx;
} 