/* pages/user/film/detail/index.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  padding-bottom: 120rpx;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  position: relative;
}

.back-icon {
  position: absolute;
  left: 30rpx;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.status-card {
  padding: 40rpx 30rpx;
  color: #ffffff;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
}

.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
}

.value-wrap {
  display: flex;
}

.value {
  color: #333;
}

.copy-btn {
  color: #157efb;
  margin-left: 20rpx;
}

.film-items {
  margin-top: 20rpx;
}

.film-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.film-item:last-child {
  border-bottom: none;
}

.film-info {
  flex: 1;
}

.film-type {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.film-size {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.film-remark {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.film-price {
  text-align: right;
}

.quantity {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.price {
  font-size: 28rpx;
  color: #ff6b6b;
}

.price-summary {
  margin-top: 20rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #666;
}

.summary-item.total {
  font-weight: bold;
  color: #333;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.total-price {
  color: #ff6b6b;
  font-size: 32rpx;
}

.footer-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.footer-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  color: #666;
  background-color: #f5f5f5;
}

.pay-btn, .confirm-btn {
  background-color: #157efb;
  color: #ffffff;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
} 