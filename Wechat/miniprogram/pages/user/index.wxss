.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background: #1296db;
  color: #fff;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.mobile {
  font-size: 26rpx;
  opacity: 0.8;
}

.login-btn {
  font-size: 32rpx;
  font-weight: bold;
}

/* 订单区域 */
.order-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-header text {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.more {
  font-size: 26rpx;
  color: #999;
  font-weight: normal;
}

.order-types {
  display: flex;
  padding: 30rpx 0;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.type-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.type-item text {
  font-size: 26rpx;
  color: #666;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: 50rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: #e4393c;
  color: #fff;
  border-radius: 16rpx;
  font-size: 22rpx;
  padding: 0 8rpx;
}

/* 功能列表 */
.menu-list {
  margin: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 40rpx 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #e4393c;
} 