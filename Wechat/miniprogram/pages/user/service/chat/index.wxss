/* pages/user/service/chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 头部样式 */
.chat-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

.header-back {
  padding: 10rpx;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.header-title {
  font-size: 34rpx;
  font-weight: 500;
  flex: 1;
  text-align: center;
  margin-right: 50rpx;
}

/* 消息列表 */
.chat-messages {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

/* 消息气泡样式 */
.message-item {
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.message-content {
  max-width: 70%;
  margin: 0 20rpx;
}

.message-bubble {
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  word-break: break-all;
  position: relative;
}

.service-message .message-bubble {
  background-color: #ffffff;
  color: #333;
  border-top-left-radius: 4rpx;
}

.user-message .message-bubble {
  background-color: #007aff;
  color: #fff;
  border-top-right-radius: 4rpx;
}

/* 发送中的消息 */
.message-bubble.sending {
  opacity: 0.8;
}

.sending-status {
  position: absolute;
  right: -40rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
}

.sending-icon {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  border-right-color: transparent;
  animation: spin 1s linear infinite;
}

/* 发送失败的消息 */
.message-bubble.failed {
  background-color: #ff6666;
}

.failed-status {
  display: flex;
  align-items: center;
  position: absolute;
  right: -150rpx;
  top: 50%;
  transform: translateY(-50%);
}

.failed-icon {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: #ff6666;
  color: #fff;
  border-radius: 50%;
  margin-right: 10rpx;
  font-size: 24rpx;
}

.failed-text {
  font-size: 22rpx;
  color: #ff6666;
  white-space: nowrap;
}

.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: center;
}

.service-message {
  align-self: flex-start;
}

.user-message {
  align-self: flex-end;
  flex-direction: row-reverse;
}

/* 空消息提示 */
.empty-messages {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(0, 122, 255, 0.2);
  border-radius: 50%;
  border-top-color: #007aff;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more, .no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

.loading-icon {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid rgba(0, 122, 255, 0.2);
  border-radius: 50%;
  border-top-color: #007aff;
  animation: spin 1s linear infinite;
  margin-right: 10rpx;
}

/* 输入框 */
.chat-input-container {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.chat-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-btn {
  margin-left: 20rpx;
  width: 120rpx;
  height: 70rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-btn.disabled {
  background-color: #cccccc;
  color: #ffffff;
}

/* 调试信息 */
.debug-info {
  display: none; /* 正式环境不显示，仅调试时设为block */
  margin-bottom: 20rpx;
  padding: 10rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 10rpx;
}

/* 动画 */
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
} 