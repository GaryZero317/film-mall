/* pages/user/settings/change-password/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.form {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  margin-top: 60rpx;
  border: none;
}

.submit-btn::after {
  border: none;
}

.submit-btn[loading] {
  opacity: 0.7;
} 